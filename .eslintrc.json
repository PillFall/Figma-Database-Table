{
  "root": true,
  "env": {
    "node": true
  },
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:vue/vue3-strongly-recommended",
    "plugin:vue/vue3-recommended",
    "plugin:vue/vue3-essential"
  ],
  "rules": {
    "semi": [
      "error",
      "never"
    ],
    "semi-spacing": "error",
    "semi-style": "warn",
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "comma-spacing": "error",
    "comma-style": "warn",
    "quotes": [
      "warn",
      "double"
    ],
    "vue/html-closing-bracket-newline": [
      "warn",
      {
        "singleline": "never",
        "multiline": "never"
      }
    ],
    "vue/html-self-closing": [
      "warn",
      {
        "html": {
          "void": "always",
          "normal": "never",
          "component": "never"
        },
        "svg": "always",
        "math": "always"
      }
    ],
    "vue/require-default-prop": "off",
    "vue/multi-word-component-names": "off"
  }
}
